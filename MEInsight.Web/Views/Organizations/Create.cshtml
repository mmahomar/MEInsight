@model MEInsight.Entities.Core.Organization

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Organization</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationName" class="control-label"></label>
                <input asp-for="OrganizationName" class="form-control" />
                <span asp-validation-for="OrganizationName" class="text-danger"></span>
            </div>

            <!-- Add Contacts -->
            <div class="form-group">
                <label asp-for="Data.Contacts.Phone" class="control-label"></label>
                <input asp-for="Data.Contacts.Phone" class="form-control" />
                <span asp-validation-for="Data.Contacts.Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data.Contacts.Contact" class="control-label"></label>
                <input asp-for="Data.Contacts.Contact" class="form-control" />
                <span asp-validation-for="Data.Contacts.Contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefOrganizationTypeId" class="control-label"></label>
                <select asp-for="RefOrganizationTypeId" class="form-control" asp-items="ViewBag.RefOrganizationTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ParentOrganizationId" class="control-label"></label>
                <select asp-for="ParentOrganizationId" class="form-control" asp-items="ViewBag.ParentOrganizationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RefLocationId" class="control-label"></label>
                <select asp-for="RefLocationId" class="form-control" asp-items="ViewBag.RefLocationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsOrganizationUnit" /> @Html.DisplayNameFor(model => model.IsOrganizationUnit)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationDate" class="control-label"></label>
                <input asp-for="RegistrationDate" class="form-control" />
                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
            </div>

            <!-- Add Language input -->
            <div>
                <div id="languages">
                    @for (var i = 0; i < 1; i++)
                    {
                        <div class="form-group">
                            <div>
                                <label asp-for="Data.Languages[0].LanguageCode" class="control-label">Language Code</label>
                                <input asp-for="Data.Languages[0].LanguageCode" class="form-control" />
                            </div>
                            </div>
                            <div class="form-group">
                            <div>
                                <label asp-for="Data.Languages[0].LocaleCode" class="control-label">Locale Code</label>
                                <input asp-for="Data.Languages[0].LocaleCode" class="form-control" />
                            </div>
                        </div>
                                <div class="form-group">
                            <div>
                                <label asp-for="Data.Languages[0].OrganizationName" class="control-label">Organization Name</label>
                                <input asp-for="Data.Languages[0].OrganizationName" class="form-control"></input>
                            </div>
                        </div>
                        
                    }
                </div>
            </div>


            @*   <div class="form-group">
            <label asp-for="Data.Language" class="control-label"></label>
            <input asp-for="Data.LanguageCode" class="form-control" />
            <span asp-validation-for="Data.LanguageCode" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="Data.Languages.LocaleCode" class="control-label"></label>
            <input asp-for="Data.Languages.LocaleCode" class="form-control" />
            <span asp-validation-for="Data.Languages.LocaleCode" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="Data.Languages.OrganizationName" class="control-label"></label>
            <input asp-for="Data.Languages.OrganizationName" class="form-control" />
            <span asp-validation-for="Data.Languages.OrganizationName" class="text-danger"></span>
            </div> *@

           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
