        @model MEInsight.Entities.Core.Organization

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Locations)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Locations)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsOrganizationUnit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsOrganizationUnit)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Contacts.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Contacts.Phone)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Contacts.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Contacts.Contact)
        </dd>

        <dt class="col-sm-2">
            Languages
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var language in Model.Data.Languages)
                {
                    <li>
                        <strong>Language Code:</strong> @Html.DisplayFor(_ => language.LanguageCode)
                        <br />
                        <strong>Locale Code:</strong> @Html.DisplayFor(_ => language.LocaleCode)
                        <br />
                        <strong>Organization Name:</strong> @Html.DisplayFor(_ => language.OrganizationName)
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrganizationId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
